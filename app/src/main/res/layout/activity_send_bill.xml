<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/_20sdp"
    android:paddingLeft="@dimen/_20sdp"
    android:orientation="vertical"
    tools:context=".view.sendBill">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:text="شكرا"
        android:gravity="center"
        android:textSize="@dimen/_13ssp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:text="لاختياركم تطبيق سوبر ماركت"
        android:gravity="center"
        android:textSize="@dimen/_15ssp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:text="سوف يقوم المتجر باللاتصال للتاكيد"
        android:gravity="center"
        android:textSize="@dimen/_15ssp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:paddingRight="@dimen/_20sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="يرجى ادخال البريد الالكترونى لارسال الفاتوره"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_10ssp"
            android:hint="@string/email"
            android:background="@drawable/edittextback"
            android:gravity="center" />
    </LinearLayout>
    <Button
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/switcherback"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/send"
        android:text="تابع ارسال الفاتوره "
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13ssp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/redback"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/back"
        android:id="@+id/back"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13ssp"
        android:layout_gravity="center"/>
</LinearLayout>