<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    android:gravity="right"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_109sdp"
        android:weightSum="1"
        android:gravity="right"
        android:orientation="horizontal">
    <ImageView
        android:layout_weight=".1"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp"
        android:layout_height="@dimen/_25sdp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:weightSum="3"
        android:paddingRight="@dimen/_10sdp"
        android:layout_weight=".65">
        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سنيكرز  قالب شيكولاتة من شركة مارس لصناعة الشوكولاتة "
            android:id="@+id/favTitle"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 ريال"
            android:layout_marginTop="@dimen/_7sdp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:id="@+id/favprice"
            android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:textColor="@android:color/white"
                android:src="@drawable/add"
                android:padding="@dimen/_5sdp"
                android:id="@+id/increase"
                android:layout_marginRight="@dimen/_3sdp"
                android:background="@drawable/ovalnum"
                android:gravity="center"/>
            <TextView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:text="1"
                android:id="@+id/textnum"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11ssp"
                android:background="@drawable/insecreaseback"
                android:gravity="center"/>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_13ssp"
                android:src="@drawable/substract"
                android:padding="@dimen/_5sdp"
                android:id="@+id/decrease"
                android:background="@drawable/ovalnum"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
<ImageView
    android:layout_weight=".25"
    android:layout_width="0dp"
    android:paddingRight="@dimen/_10sdp"
    android:id="@+id/favicon"
    android:src="@drawable/snilkers"
    android:layout_height="match_parent" />
    </LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_1sdp"
    android:background="@color/gray"/>
</LinearLayout>