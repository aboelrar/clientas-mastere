<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    app:layout_widthPercent="50%"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/griditemback"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/_5sdp"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/doritos" />
    <TextView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="دوريتوس بنكهه الفلفل الحار"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        android:text="2 ريال "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:textColor="@android:color/white"
            android:src="@drawable/add"
            android:padding="@dimen/_5sdp"
            android:id="@+id/increase"
            android:layout_marginRight="@dimen/_3sdp"
            android:background="@drawable/ovalnum"
            android:gravity="center"/>
        <TextView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:text="1"
            android:id="@+id/textnum"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_11ssp"
            android:background="@drawable/insecreaseback"
            android:gravity="center"/>
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13ssp"
            android:src="@drawable/substract"
            android:padding="@dimen/_5sdp"
            android:id="@+id/decrease"
            android:background="@drawable/ovalnum"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>

    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />
</RelativeLayout>