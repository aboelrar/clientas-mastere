<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--Other custom stuff if needed-->
        <item name="android:layout_width">wrap_content</item>
        <item name="color">@color/appBack</item>
    </style>
    <style name="BottomCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
</resources>
